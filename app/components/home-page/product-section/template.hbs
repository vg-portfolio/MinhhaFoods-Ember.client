    {{#each selectedContent as |p|}}
    <div class="col s12 m3">
      <div class="card-panel small hoverable">
        <p>Title: {{p.title}}</p>
        <p>Description: {{p.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
