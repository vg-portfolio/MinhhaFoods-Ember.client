  <div class="product-section sub-links">
    <ul>
      <li><a class="btn" {{action "showSelectedContent" null}}>Show All</a></li>
      {{#each productCategories as |cat|}}
        <li><a class="btn" {{action "showSelectedContent" cat.catType}}>{{cat.catType}}</a></li>
