  <div class="product-section-container">
    <h4>{{productSection.title}}</h4>
    <span>â™¡</span>
    <p class="flow-text">{{productSection.description}}</p>
  </div>

  <div class="product-section link-button">
    <ul>
      <li><a class="btn" {{action "showSelectedContent"}}>All</a></li>
      {{#each productCategories as |cat|}}
        <li><a class="btn" {{action "showSelectedContent" cat}}>{{cat.catType}}</a></li>
      {{/each}}
    </ul>
  </div>

  <div class="row center-align">
    {{#each selectedContent as |p|}}
    <div class="col s12 m4">
      <div class="card-panel small hoverable" {{action "showModal"}}>
        <p>Title: {{p.title}}</p>
        <p>Description: {{p.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
