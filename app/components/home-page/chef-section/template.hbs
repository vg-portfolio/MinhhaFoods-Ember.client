<section class="chef-section">
  <div class="chef-container container">
    {{#if toggleLang.showViet}}
    <h4 id="chef-section" class="section-heading">{{chefSection.titleVn}}</h4>
    <span>♡</span>
    <p class="flow-text">{{chefSection.descriptionVn}}</p>
    {{else}}
    <h4 id="chef-section" class="section-heading">{{chefSection.title}}</h4>
    <span>♡</span>
    <p class="flow-text">{{chefSection.description}}</p>
    {{/if}}
  </div>


  <div class="image-row row">
    {{#each chefCategories as |cat|}}
    {{#link-to 'chef-dishes' cat}}
    {{!-- <a {{action "showSelectedContent" cat}}> --}}
      <div class="col s12 m4">
        <div class="card hoverable chef-image-wrapper valign-wrapper">
          <img src="{{cat.imageUrl}}" alt="">
          <p>{{cat.catType}}</p>
        </div>
      </div>
    {{!-- </a> --}}
    {{/link-to}}
    {{/each}}
  </div>

