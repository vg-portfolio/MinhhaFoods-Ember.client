<div class="row">
  <div class="col s6">
    <div class="card-panel">
      <div class="row">
        <div class="col s6">
          <p class="flow-text">{{cardTitle}}</p>
        </div>
        <div class="col s6">
          {{#if isFormShown}}
          <button class="btn btn-primary disabled" type="button" name="button" {{action "new"}}>{{newButton}}</button>
          <button class="btn btn-primary red" type="button" name="button" {{action "closeForm"}}>X</button>
          {{else}}
          <button class="btn btn-primary" type="button" name="button" {{action "new"}}>{{newButton}}</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<!--./row-->

<!--Form to add new stuff-->
{{#if isFormShown}}
<!--Product category form-->
{{#if (eq whichForm "catForm")}}
<div class="row">
  <div class="col s8">
    <div class="card-panel large">
      {{input-form/new-card
        cardFormName="Add a new category"
        title=newObject.catType
        titleVn=newObject.catTypeVn
        description=newObject.description
        descriptionVn=newObject.descriptionVn

        newCardTitle="Category title"
        newCardTitleVn="Category title VN"
        newDescription="Description"
        newDescriptionVn="Description VN"}}

      <div class="row">
        <button class="btn btn-primary" type="button" name="button" {{action "save"}}>Save</button>
      </div>
    </div>
  </div>
</div>
{{/if}}
<!--/.product category form-->


<!--About section Award form-->
{{#if (eq whichForm "awardForm")}}
<div class="row">
  <div class="col s8">
    <div class="card-panel large">
      {{input-form/new-card
        cardFormName="Add a new award"
        title=newObject.title
        titleVn=newObject.titleVn
        description=newObject.description
        descriptionVn=newObject.descriptionVn

        newCardTitle="Award name"
        newCardTitleVn="Award name VN"
        newDescription="Description"
        newDescriptionVn="Description VN"}}

      <div class="row">
        <button class="btn btn-primary" type="button" name="button" {{action "save"}}>Save</button>
      </div>
    </div>
  </div>
</div>
{{/if}}
<!-- /.About section award form-->
{{/if}}
<!--/.form to add new stuff-->


<!--Category cards-->
{{#if (eq whichForm "catForm")}}
<div class="row">
  {{#each model as |model|}}
  <div class="col s12 m4">
    <div class="card-panel small">

      {{input-form/inputs-section
        valueTitle=model.catType
        valueTitleVn=model.cateTypeVn
        valueDescription=model.description
        valueDescriptionVn=model.descriptionVn

        cardTitle="Product Category"
        title="Category title"
        titleVn="Category title VN"
        description="Description"
        descriptionVn="Description VN"}}

      <button {{action "update" model}} type="button" name="button" class="btn teal">Save</button>
      <button {{action "delete" model}} type="button" name="button" class="btn red">X</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<!--/.category cards-->

<!--Award cards-->
{{#if (eq whichForm "awardForm")}}
<div class="row">
  {{#each model as |model|}}
  <div class="col s12 m4">
    <div class="card-panel small">

      {{input-form/inputs-section
        valueTitle=model.title
        valueTitleVn=model.titleVn
        valueDescription=model.description
        valueDescriptionVn=model.descriptionVn

        cardTitle="Awards"
        title="Award name"
        titleVn="Award name VN"
        description="Description"
        descriptionVn="Description VN"}}

      <button {{action "update" model}} type="button" name="button" class="btn teal">Save</button>
      <button {{action "delete" model}} type="button" name="button" class="btn red">X</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<!--/.award cards-->
