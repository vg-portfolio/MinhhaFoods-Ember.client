<div class="row">
  <div class="col s6">
    <div class="card-panel">
      <div class="row">
        <div class="col s6">
          <p class="flow-text">Award</p>
          {{!-- {{md-textarea label='Description'
            value=model.description class="col s12"}}
          {{md-textarea label='Description VN'
            value=model.descriptionVn class="col s12"}} --}}
        </div>
        <div class="col s6">
          {{#if awardFormShown}}
          <button class="btn btn-primary disabled" type="button" name="button" {{action "addNewAward"}}>Create award</button>
          <button class="btn btn-primary red" type="button" name="button" {{action "closeForm"}}>X</button>
          {{else}}
          <button class="btn btn-primary" type="button" name="button" {{action "addNewAward"}}>Create award</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

{{#if awardFormShown}}

<div class="row">
  <div class="col s8">
    <div class="card-panel large">
      <p class="flow-text">Create new award</p>
      {{md-input value=newAward.title label='Award title' class="col s12 m6"}}
      {{md-input value=newAward.titleVn label='Award title VN' class="col s12 m6"}}
      <div class="row">
        {{md-textarea label='Description'
          value=newAward.description class="col s12"}}
        {{md-textarea label='Description VN'
          value=newAward.descriptionVn class="col s12"}}
      </div>
      <div class="row">
        <button class="btn btn-primary" type="button" name="button" {{action "save"}}>Save</button>
      </div>
    </div>
  </div>
</div>

{{else}}

<div class="row">
  {{#each model as |model|}}
  <div class="col s12 m4">
    <div class="card-panel small">
      {{md-input value=model.title label='Award title' class="col s12 m6"}}
      {{md-input value=model.titleVn label='Award title VN' class="col s12 m6"}}
      <div class="row">
        {{md-textarea label='Award description'
          value=model.description class="col s12"}}
        {{md-textarea label='Award description VN'
            value=model.descriptionVn class="col s12"}}
      </div>
      <button {{action "saveAward" model}} type="button" name="button" class="btn teal">Save</button>
      <button {{action "delete" model}} type="button" name="button" class="btn red">X</button>
    </div>
  </div>
  {{/each}}
</div>

{{/if}}
